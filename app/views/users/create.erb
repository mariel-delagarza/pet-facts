<head>
  <link href="https://fonts.googleapis.com/css?family=Poppins&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Cutive&display=swap" rel="stylesheet">
  <style>
    body {
      background-color: #eaebef;

    }

    #title {
      margin-left: auto;
      margin-right: auto;
      text-align: center;
      font-family: 'Cutive', serif;
    }

    #new-user-form {
      background-image: url("https://images.unsplash.com/photo-1567505647004-3718cc3d5ca1?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=80");
    }

    .form {
      font-family: 'Poppins', sans-serif;
    }
    
  </style>
</head>

<div id="title and subtitle">
  <h1 id="title"> Create an account!</h1>
  <p id="subtitle">Start keeping your pet's info in one place</p>
</div>
<div id="container">
  <form id="new-user-form" action="/users" method="POST">
    <div id="form-container">
      <label for="username" id="username">Username:</label>
      <input type="text" id="username" name="username" required>
      <br/>
      <label for="email" id="email">Email:</label>
      <input type="email" id="email" name="email" required>
      <br/>
      <label for="password" id="password">Password:</label>
      <input type="password" id="password" name="password" required>
      <br/>
      <input type="submit">
    </div>
  </form>
</div>